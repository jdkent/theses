publisher = {Elsevier B.V.},
title = {{Disrupted modulation of thalamus activation and thalamocortical connectivity during dual task performance in schizophrenia}},
url = {https://doi.org/10.1016/j.schres.2018.12.022},
volume = {210},
year = {2019}
