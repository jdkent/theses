journal = {NeuroImage},
keywords = {Brain,Delay,Functional,General linear model,Temporal derivative,fMRI,fmri,method},
mendeley-tags = {fmri,method},
number = {1},
pages = {252--257},
pmid = {15110015},
title = {{fMRI analysis with the general linear model: Removal of latency-induced amplitude bias by incorporation of hemodynamic derivative terms}},
